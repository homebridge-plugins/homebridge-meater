{
  "name": "@homebridge-plugins/homebridge-meater",
  "displayName": "Meater",
  "type": "module",
  "version": "1.1.2",
  "description": "The Meater plugin allows you to access your Meater device(s) from HomeKit.",
  "author": {
    "name": "donavanbecker",
    "url": "https://github.com/donavanbecker"
  },
  "license": "ISC",
  "funding": [
    {
      "type": "Paypal",
      "url": "https://paypal.me/donavanbecker"
    },
    {
      "type": "GitHub",
      "url": "https://github.com/sponsors/donavanbecker"
    }
  ],
  "homepage": "https://github.com/homebridge-plugins/homebridge-meater",
  "repository": {
    "type": "git",
    "url": "git://github.com/homebridge-plugins/homebridge-meater.git"
  },
  "bugs": {
    "url": "https://github.com/homebridge-plugins/homebridge-meater/issues"
  },
  "keywords": [
    "homebridge-plugin",
    "meater",
    "temperature"
  ],
  "main": "dist/index.js",
  "icon": "https://raw.githubusercontent.com/homebridge-plugins/homebridge-meater/beta-2.12.1/branding/icon.png",
  "engines": {
    "homebridge": "^1.8.5 || ^2.0.0 || ^2.0.0-beta.11 || ^2.0.0-alpha.10",
    "node": "^20 || ^22"
  },
  "scripts": {
    "check": "npm install && npm outdated",
    "update": "ncu -u && npm update && npm install",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "watch": "npm run build && npm run plugin-ui && npm link && nodemon",
    "plugin-ui": "rsync ./src/homebridge-ui/public/index.html ./dist/homebridge-ui/public/",
    "build": "npm run clean && tsc && npm run plugin-ui",
    "prepublishOnly": "npm run lint && npm run build && npm run plugin-ui ",
    "postpublish": "npm run clean",
    "clean": "shx rm -rf ./dist",
    "test": "npm run lint",
    "docs": "typedoc",
    "lint-docs": "typedoc --emit none --treatWarningsAsErrors"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@homebridge/plugin-ui-utils": "^1.0.3",
    "rxjs": "^7.8.1",
    "undici": "^6.20.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@types/aes-js": "^3.1.4",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.8.6",
    "@types/semver": "^7.5.8",
    "@types/source-map-support": "^0.5.10",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^9.14.0",
    "eslint-plugin-format": "^0.1.2",
    "homebridge": "^1.8.5",
    "homebridge-config-ui-x": "4.62.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "npm-check-updates": "^17.1.9",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
